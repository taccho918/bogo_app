<% if @keywords.present? %>
<h1>search result</h1>
  <tbody>
    <% @keywords.each do |keyword| %>
    <div class="panel panel-default">
    	<div class="panel-heading">
    		<td><h3><strong>search<%= User.find(keyword.user_id).name %></strong></h3></td>
    		<td><%= keyword.created_at %></td>
    	</div>
    	<div class="panel-body text-left">
    		<td><h2><%= keyword.content %></h2></td>
    	</div>
    	<div class="panel-footer text-right">
    	  <% if current_user.nil? %>
    		  <td><%= link_to 'Show', keyword %></td>
        <% else %>
          <td><%= link_to 'Show', keyword %></td>
          <% if keyword.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_post_path(keyword) %></td>
            <td><%= link_to 'Delete', keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
    	</div>
    </div>
    <% end %>
    </tbody>
<% else %>
   <h3>no posts<h3>
<% end %>